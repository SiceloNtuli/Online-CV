@model SiceloNtuliOnlineCV.Models.PersonalInfo

<div class="personal-info">
    <h1>@Model.FullName</h1>
    <h2>@Model.ProfessionalTitle</h2>

    <div class="contact-info">
        <p><i class="fas fa-envelope"></i> @Model.Email</p>
        <p><i class="fas fa-phone"></i> @Model.Phone</p>
        <p><i class="fas fa-map-marker-alt"></i> @Model.Location</p>
        @if (!string.IsNullOrEmpty(Model.LinkedIn))
        {
            <p><i class="fab fa-linkedin"></i> <a href="@Model.LinkedIn" target="_blank">LinkedIn Profile</a></p>
        }
        
        @if (!string.IsNullOrEmpty(Model.GitHub))
        {
            <p><i class="fab fa-github"></i> <a href="@Model.GitHub" target="_blank">GitHub Profile</a></p>
        }
    </div>
</div>